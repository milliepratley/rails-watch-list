  <div class="container">
  <h1>Add a new movie to <%= @list.name.capitalize %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit %>
  <% end %>

  <%= link_to "<< Back to Lists", lists_path, class: "back-btn" %>
</div>
